@using BusinessObject
@model Book
@{
    ViewBag.Title = "Create Book";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="border">
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="PublishedDate"></label>
            <input asp-for="PublishedDate" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="PublisherId"></label>
            <input asp-for="PublisherId" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Advance"></label>
            <input asp-for="Advance" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Royalty"></label>
            <input asp-for="Royalty" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="YtdSales"></label>
            <input asp-for="YtdSales" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Notes"></label>
            <input asp-for="Notes" class="form-control"/>
        </div>
        

        <button type="submit" class="btn btn-primary">Create</button>
    </div>
    <a asp-action="Index">Back to List</a>
</form>