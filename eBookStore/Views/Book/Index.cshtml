@model IEnumerable<BusinessObject.Book>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Index</h1>

<p><a asp-action="Create">Create new</a></p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishedDate)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(Model => item.Title)</td>
            <td>@Html.DisplayFor(Model => item.Type)</td>
            <td>@Html.DisplayFor(Model => item.Price)</td>
            <td>@Html.DisplayFor(Model => item.PublishedDate)</td>
            <td>
                <a asp-controller="Book" asp-action="Detail" asp-route-id="@item.Id">Detail</a>|
                <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>