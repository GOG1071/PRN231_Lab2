@using BusinessObject
@model Author

@{
    ViewBag.Title = "Edit " + Model.FirstName + " " + Model.LastName;
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <input hidden asp-for="Id"/>
    <div class="border">
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName"/>
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" value="@Model.LastName"/>
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" value="@Model.Phone"/>
        </div>
        <div class="mb-3">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" class="form-control" value="@Model.EmailAddress"/>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" value="@Model.Address"/>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" value="@Model.City"/>
        </div>
        <div class="mb-3">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control" value="@Model.State"/>
        </div>
        <div class="mb-3">
            <label asp-for="Zip"></label>
            <input asp-for="Zip" class="form-control" value="@Model.Zip"/>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index">Back to List</a>
    </div>
</form>